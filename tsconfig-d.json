{
  "extends": "./tsconfig.json",
  "include": ["./src/*", "types"],
  "exclude": ["**/node_modules/**", "**/__tests__/**"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "Node",
    "noEmit": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./types",
    "typeRoots": ["node_modules/@types", "types"]
  }
}
